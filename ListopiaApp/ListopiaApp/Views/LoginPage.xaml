<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListopiaApp.Views.LoginPage">
    <StackLayout VerticalOptions="Center" Padding="20">
        <Label Text="Listopia" HorizontalTextAlignment="Center" TextColor="{StaticResource CompanyColor}" FontSize="80"/>
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Label Text="Peace of mind" HorizontalTextAlignment="Center" FontSize="30" TextColor="#000000"/>
            <Image Source="checkedbox.png" />
        </StackLayout>
        <Entry x:Name="EmailEntry" Placeholder="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Label x:Name="ErrorLabel" Text="Invalid Credentials" TextColor="#B24D3D" HorizontalTextAlignment="Center" IsVisible="False"/>
        <Button x:Name="LoginButton" Text="Login" Clicked="LoginButton_Clicked" BackgroundColor="{StaticResource CompanyColorDark}" TextColor="#FFFFFF"/>
        <Button x:Name="SignUpButton" Text="Sign Up" Clicked="SignUpButton_Clicked" BackgroundColor="Transparent" TextColor="{StaticResource CompanyColorDark}"/>
    </StackLayout>
</ContentPage>